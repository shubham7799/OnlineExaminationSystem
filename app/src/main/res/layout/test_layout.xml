<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">



    <androidx.cardview.widget.CardView
        android:id="@+id/testCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_margin="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/subjecttestname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                tools:text="Assignment 1" />
            <TextView

                android:textColor="#fff"
                android:id="@+id/subjecttesttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Time: 20 Minutes" />
            <TextView

                android:textColor="#fff"
                android:id="@+id/subjecttestnumberquestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Number of Questions: 20" />
            <TextView

                android:textColor="#fff"
                android:id="@+id/subjecttestdeadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Test Status: LIVE" />
            <TextView

                android:textColor="#fff"
                android:id="@+id/subjectteststatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                tools:text="Test Status: LIVE" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>